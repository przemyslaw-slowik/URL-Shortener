@model UrlModel

@{
    ViewData["Title"] = "URL Shortener";
    ViewData["Domain"] = "mc-csgo.ovh";
    ViewData["Menu"] = "navbar custom-navbar navbar-fixed-top";
}

<!-- FEATURE -->
<section id="home" data-stellar-background-ratio="0.5">
    <div class="overlay"></div>
    <div class="container">
        <div class="row">

            <div class="col-md-offset-3 col-md-6 col-sm-12">
                <div class="home-info">
                    <h3>@ViewData["Domain"]</h3>
                    <h1>Enter your URL here:</h1>

                    <form asp-action="Create" class="online-form">

                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <span asp-validation-for="Url" class="text-danger"></span>
                        <div class="form-group">
                            <input asp-for="Url" type="url" class="form-control" placeholder="http://" />
                            <button type="submit" value="Create" class="form-control">Shorten URL</button>
                        </div>

                        <span asp-validation-for="ShortUrl" class="text-danger"></span>
                        <div class="form-group">
                            <label asp-for="ShortUrl" class="label">Custom URL (optional):</label>
                            <input asp-for="ShortUrl" class="form-control" />
                        </div>

                    </form>
                </div>
            </div>

        </div>
    </div>
</section>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}